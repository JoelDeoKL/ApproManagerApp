{% extends 'template.html.twig' %}

{% block title %}ApproManager - Stocks Provincial{% endblock %}

{% block body %}

    <div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Liste de toutes les déclarations qui constituent le grand stock</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Nom Produit</th>
                                    <th>Quantite Achetée</th>
                                    <th>Quantité Vendue</th>
                                    <th>Nature</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for declaration in declarations %}
                                    <tr>
                                        <td>{{ declaration.produit }}</td>
                                        <td>{{ declaration.qteAchete }}</td>
                                        <td>{{ declaration.qteVendue }}</td>
                                        <td>{{ declaration.nature }}</td>
                                        <td>
                                            <a href="" class="btn btn-primary">Voir</a>
                                            <a href="{{ path("editer_declaration", {id: declaration.id}) }}" class="btn btn-primary">Modifier</a>
                                            <a href="" class="btn btn-primary">Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}