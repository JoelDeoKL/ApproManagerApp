{% extends 'template_op.html.twig' %}

{% block title %}ApproManager - Déclaration{% endblock %}

{% block body %}

<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Formulaire de création de PV</h4>
                        <p class="card-description">
                            Remplir ce formulaire
                        </p>
                        {{ form_start(form, {'attr': {
                            'class':'forms-sample',
                        }}) }}
                            <div class="form-group">
                                {{ form_label(form.motif) }}
                                {{ form_widget(form.motif, {'attr': {
                                    'class':'required form-control',
                                }}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, {'attr': {
                                    'class':'required form-control',
                                }}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.auteur) }}
                                {{ form_widget(form.auteur, {'attr': {
                                    'class':'required form-control',
                                }}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.operateur) }}
                                {{ form_widget(form.operateur, {'attr': {
                                    'class':'required form-control',
                                }}) }}
                            </div>
                        {{ form_widget(form.editer, {'attr': {'class':'btn btn-primary'}}) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}